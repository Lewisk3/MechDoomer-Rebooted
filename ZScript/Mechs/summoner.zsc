class Summoner_LeftTorso : MechSideTorso
{
	Default
	{
		Radius 0; Height 0;
		MechHardpoint.HitBox 8,40, 0,-12,8;
		MechHardpoint.UIGraphics "paperdoll_LT.png", "paperdoll_SK_LT.png";

		MechHardpoint.Vitals 37, 18;
		MechHardpoint.SetupArmor 28, 9;
		MechHardpoint.RearArmor true;
		MechHardpoint.CreatesDebris true;
	}
     
	override void SetupHitboxes()
	{
		super.SetupHitBoxes();
		AddHitBox(-15,-12,8, 8,40);
	}
	
	virtual void SetupSummonerMissiles()
	{
		vector3 basePos = (10.4,-11,40);
		double baseSize = 0.6;
	
		let mnt = AddMountPoint("Missile", basePos.x,basePos.y,basePos.z, baseSize);
		
		// Inner Circle
		mnt.newOffset(basePos.x, basePos.y - 2, basePos.z + 2);
		mnt.newOffset(basePos.x, basePos.y - 3, basePos.z - 1);
		mnt.newOffset(basePos.x, basePos.y, basePos.z - 2.5);
		mnt.newOffset(basePos.x, basePos.y + 2.7, basePos.z - 1);
		mnt.newOffset(basePos.x, basePos.y + 2.4, basePos.z + 1.9);
		
		// Outer Circle
		double angOffs = 10;
		double ang = 360 / 9.0;
		double rad = 5;
		vector2 scalar = (1.3, 1.0);
		for(int i = 0; i < 9; i++)
		{
			double curAngle = (ang * i) + angOffs;
			vector3 rot = ((0, cos(curAngle) * scalar.x, sin(curAngle) * scalar.y) * rad);
			vector3 newPos = basePos + rot;
			mnt.newOffset(newPos.x, newPos.y, newPos.z);
		}
	}
	
	override void SetupMounts()
	{
		SetupSummonerMissiles();
	}
}
