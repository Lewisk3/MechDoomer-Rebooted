class MechSummonerPrime : DrivableMech
{
	Default
	{
		Radius 48;
		DrivableMech.Acceleration 41, 32;
		DrivableMech.MaxWeight 75; // In Tons.
		DrivableMech.ChassisName "Summoner";
		DrivableMech.VariantName "Prime";
		DrivableMech.ItemGraphic "Graphics/MechIcons/Summoner_icon.png";
		DrivableMech.CBillValue (21150833  * MECHPRICESCALAR);
		
		DrivableMech.Manufacturer "Defiance Industries";
	}
	
	override string getShopDescription()
	{
		return ( 
			"\c[White]The Summoner is a highly mobile heavy OmniMech that is "
			"commonly used by Clan Jade Falcon in a wide variety of roles. "
			"Barely a second generation OmniMech, the Jade Falcons introduced "
			"the Summoner just after becoming the first Clan to win OmniMech "
			"technology from Clan Coyote in 2863. The Summoner was code-named "
			"Thor, its Inner Sphere reporting name, by Victor Steiner-Davion "
			"himself after fighting one on Trellwan. "
			"(Source: https://www.sarna.net/wiki/Summoner_(Thor))"
		);
	}
   
	override void SetupParts()
	{
		super.SetupParts();

		legs  = AddMechPart("Summoner_Legs",  0,0,0,  self);
		hips  = AddMechPart("Summoner_Hips",  0,0,41, legs);

		// Hardpoints
		torso      = AddHardpoint("Summoner_CenterTorso", 0,0,5, hips);
		leftTorso  = AddHardpoint("Summoner_LeftTorso",  0,0,0, torso);
		rightTorso = AddHardpoint("Summoner_RightTorso", 0,15,5, torso);

		leftLeg = AddHardpoint("Summoner_LeftLeg",  0, -16,0, legs);
		rightLeg = AddHardpoint("Summoner_RightLeg", 0, 16,0, legs);
		 
		leftArm  = AddHardpoint("Summoner_LeftArm",  -7,-24,27, leftTorso);
		rightArm = AddHardpoint("Summoner_RightArm", -6, 10,18, rightTorso);

		head = AddHardpoint("Summoner_Cockpit", 0, 13,35, torso);
		cam  = AddPart("CockpitCamera", 0,0,0, head);
	}

	override void SetupItems()
	{  
		// Armor and Engine
		torso.AddItem("MechEngine_XL350");
		MechArmor.addToMech(self, "MechArmor_ClanFerro");
		
		torso.AddItem("MechJumpJet");
		rightArm.AddWeapon("ERPPC", GROUPFLG_ONE);
		rightArm.AddItem("BulkHeatBank");
		
		leftArm.AddWeapon("LBXAC10", GROUPFLG_TWO);
		leftArm.AddItem("LBX10Ammo");
		leftArm.AddItem("LBX10Ammo");
		
		leftTorso.AddWeapon("LRM15", GROUPFLG_THREE);
		leftTorso.AddItem("LRMAmmo");
		leftTorso.AddItem("LRMAmmo");
		
		leftLeg.AddItem("MechJumpJet");
		leftLeg.AddItem("MechJumpJet");
		
		rightLeg.AddItem("MechJumpJet");
		rightLeg.AddItem("MechJumpJet");
	}
}

