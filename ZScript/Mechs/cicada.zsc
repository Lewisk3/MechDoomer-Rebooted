class Cicada_Hips : MechHips 
{
	override void UpdateAngles()
	{
		super.UpdateAngles();
		
		// Track torso pitch for this mech.
		if(mech && mech.torso)
			A_SetPitch(clamp(mech.torso.pitch, -10, 10), SPF_INTERPOLATE);
	}
}

