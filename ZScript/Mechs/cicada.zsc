class MechCicada : DrivableMech
{
	Default
	{
		Radius 48;
		DrivableMech.Acceleration 90, 100;
		DrivableMech.MaxWeight 40; // In Tons.
		DrivableMech.ChassisName "Cicada";
		DrivableMech.VariantName "2A";
		DrivableMech.ItemGraphic "Graphics/MechIcons/cicada_icon.png";
		DrivableMech.CBillValue (3705217 * MECHPRICESCALAR);
		
		DrivableMech.Manufacturer "HartfordCo Industries";
	}
	
	override string getShopDescription()
	{
		return ( 
			"\c[White]HartfordCo Industries designed the Cicada to compete directly with the "
			"Locust by making it just as fast but twice as large, allowing it to carry slightly "
			"better weaponry and give it an edge in physical combat, all while keeping costs down. "
			"The Star League was sufficiently impressed that they agreed to a contract with HartfordCo "
			"for a small number of Cicadas, using them to replace many Locusts lost in fighting along "
			"its border regions. "
			"(Source: https://www.sarna.net/wiki/Cicada)"
		);
	}
	
	override void SetupParts()
	{
		super.SetupParts();
		
		legs  = AddMechPart("Cicada_Legs",  0,0,0,  self);
		hips  = AddMechPart("Cicada_Hips",  0,0,60, legs);
		
		// Hardpoints
		torso      = AddHardpoint("Cicada_CenterTorso", 0,0,0, hips);
		leftTorso  = AddHardpoint("Cicada_LeftTorso",  0,-28,10, torso);
		rightTorso = AddHardpoint("Cicada_RightTorso", 0, 28,10, torso);
		
		leftLeg = AddHardpoint("Cicada_LeftLeg",  0, -26,0, legs);
		rightLeg = AddHardpoint("Cicada_RightLeg", 0, 26,0, legs);
			
		leftArm  = AddHardpoint("Cicada_LeftArm",  0, 0,0, leftTorso);
		rightArm = AddHardpoint("Cicada_RightArm", 0, 0,0, rightTorso);
		
		head = AddHardpoint("Cicada_Cockpit", 30,0,17, torso);
		cam  = AddPart("CockpitCamera", 0,0,4, head);
	}
	
	override void SetupItems()
	{	
		// Armor and Engine
		torso.AddItem("MechEngine_STD320");
		MechArmor.addToMech(self, "MechArmor_Standard");
		
		leftTorso.AddWeapon("MediumLaser", GROUPFLG_ONE);
		rightTorso.AddWeapon("MediumLaser", GROUPFLG_ONE);
		
		torso.AddWeapon("SmallLaser", GROUPFLG_TWO);
	}
}

